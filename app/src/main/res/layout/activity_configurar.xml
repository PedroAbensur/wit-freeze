<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurarActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewBusca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/search_devices" />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonManageConexao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/conectar" />

        <TextView
            android:id="@+id/textViewCalibragem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/calibra_o" />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonManageCalibracao"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/calibrar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>